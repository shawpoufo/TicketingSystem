        "ClusterId":"OrgService",
        "Match":{
          "Path":"organisationservice/{**catch-all}"
        },
        "Transforms":[
          {"PathRemovePrefix":"/organisationservice"}
        ]
      },
      "AuthRoute":{
        "ClusterId":"AuthService",
        "Match":{
          "Path":"AuthService/{**catch-all}"
        },
        "Transforms":[
          {"PathRemovePrefix":"/AuthService"}
        ]
      },
      "ConversationRoute":{
        "ClusterId":"ConversationService",
        "Match":{
          "Path":"conversationservice/{**catch-all}"
        },
        "Transforms":[
          {"PathRemovePrefix":"/conversationservice"}
        ]
      },
      "UserRoute":{
        "ClusterId":"UserService",
        "Match":{
          "Path":"userservice/{**catch-all}"
        },
        "Transforms":[
          {"PathRemovePrefix":"/userservice"}
        ]
      }
    },
    "Clusters":{
      "AuthService":{
        "Destinations":{
          "D1":{
            "Address":"http://identity:5001"
          }
        }
      },
      "TicketService":{
        "Destinations":{
          "D1":{
            "Address":"http://ticket:5002"
          }
        }
      },
      "OrgService":{
        "Destinations":{
          "D1":{
            "Address":"http://organisation:5003"
          }
        }
      }
      ,
      "ConversationService":{
        "Destinations":{
